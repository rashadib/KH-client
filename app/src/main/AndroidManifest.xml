<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.github.kunafahhouse.takeaway">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />

    <application

        android:allowBackup="true"
        android:icon="@mipmap/kh_bg"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon"
       >


        <activity android:name="io.github.kunafahhouse.takeaway.Controller.MainActivity"
            android:exported= "true"
            tools:ignore="Instantiatable">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="io.github.kunafahhouse.takeaway.Controller.SignInActivity"
            tools:ignore="Instantiatable" />
        <activity android:name="io.github.kunafahhouse.takeaway.Controller.SignUpActivity"
            tools:ignore="Instantiatable" />
        <activity
            android:name="io.github.kunafahhouse.takeaway.Controller.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme"
            tools:ignore="Instantiatable"
            android:exported= "true">

        </activity>
        <activity
            android:name="io.github.kunafahhouse.takeaway.Controller.ProductListActivity"
            android:label="@string/title_activity_product"
            android:theme="@style/Theme"
            tools:ignore="Instantiatable"
            android:exported="true">

        </activity>

        <activity android:name="io.github.kunafahhouse.takeaway.Controller.ProductDetailActivity"
            tools:ignore="Instantiatable" />
        <activity android:name="io.github.kunafahhouse.takeaway.Controller.CartActivity"
            tools:ignore="Instantiatable"></activity>

    </application>

</manifest>